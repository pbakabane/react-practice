{
  "verbose": true,
  "preset": "ts-jest",
  "testEnvironment": "jest-environment-jsdom",
  "transform": {
    "^.+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.app.json"
      }
    ]
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
